doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible" content="ie=edge")
		title Apar
		link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
	body
		.container
			.row
				.col-md-6.offset-md-3
					h1.text-center Apar Password Reset
					form(action="/api/v1/users/resetPassword" method="POST")
						input.form-control(type="hidden" name="token" value=token)
						.form-group
							label(for="password") Password
							input#password.form-control(type="password" name="password" placeholder="Enter password")
						.form-group
							label(for="confirmPassword") Confirm Password
							input#confirmPassword.form-control(type="password" name="confirmPassword" placeholder="Confirm password")
						button.btn.btn-primary(type="submit") Reset Password
